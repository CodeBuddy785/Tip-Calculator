<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Check Amount -->

    <!-- Party Size -->
    <EditText
        android:id="@+id/CheckAmountValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/checkAmountLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/twentyPercentTipValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/twentyPercentTipLabel"
        app:layout_constraintStart_toEndOf="@+id/twentyPercentTipLabel"
        tools:text="$20.00" />

    <TextView
        android:id="@+id/twentyFivePercentTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Total:"
        app:layout_constraintBaseline_toBaselineOf="@+id/twentyFivePercentTipLabel"
        app:layout_constraintEnd_toStartOf="@+id/twentyfivePercentTotalValue" />

    <TextView
        android:id="@+id/fifteenPercentTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/fifteenPercentTipLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="" />

    <TextView
        android:id="@+id/twentyfivePercentTipValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/twentyFivePercentTipLabel"
        app:layout_constraintStart_toEndOf="@+id/twentyFivePercentTipLabel"
        tools:text="$25.00" />

    <TextView
        android:id="@+id/fifteenPercentTipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="15% Tip:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCompute" />

    <TextView
        android:id="@+id/checkAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Amount:"
        app:layout_constraintBaseline_toBaselineOf="@+id/CheckAmountValue"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/PartySizeValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/partySizeLabel"
        app:layout_constraintTop_toBottomOf="@+id/CheckAmountValue" />

    <TextView
        android:id="@+id/twentyPercentTipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="20% Tip:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifteenPercentTipLabel" />

    <TextView
        android:id="@+id/twentyPercentTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/twentyPercentTipLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="" />

    <TextView
        android:id="@+id/fifteenPercentTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Total:"
        app:layout_constraintBaseline_toBaselineOf="@+id/fifteenPercentTipLabel"
        app:layout_constraintEnd_toStartOf="@+id/fifteenPercentTotalValue" />

    <TextView
        android:id="@+id/twentyPercentTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Total:"
        app:layout_constraintBaseline_toBaselineOf="@+id/twentyPercentTipLabel"
        app:layout_constraintEnd_toStartOf="@+id/twentyPercentTotalValue" />

    <TextView
        android:id="@+id/twentyFivePercentTipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="25% Tip:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twentyPercentTipLabel" />

    <TextView
        android:id="@+id/twentyfivePercentTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/twentyFivePercentTipLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="" />

    <Button
        android:id="@+id/buttonCompute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Compute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PartySizeValue" />

    <TextView
        android:id="@+id/fifteenPercentTipValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/fifteenPercentTipLabel"
        app:layout_constraintStart_toEndOf="@+id/fifteenPercentTipLabel"
        tools:text="$15.00" />

    <TextView
        android:id="@+id/partySizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party Size:"
        app:layout_constraintBaseline_toBaselineOf="@+id/PartySizeValue"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Compute Button -->

    <!-- 15% Row -->

    <!-- 20% Row -->

    <!-- 25% Row -->

</androidx.constraintlayout.widget.ConstraintLayout>
